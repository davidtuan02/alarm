<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    tools:context=".NhanBaoThuc_Activity">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/ToolbarAddAlarm_laplai"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_back"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"/>


            <TextView
                android:id="@+id/tv_Huy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="Quay lại"
                android:textColor="#FFA31C"
                android:textSize="25sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="start|center"
                android:text="Nhãn"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/liner_Sheet"
        app:layout_constraintTop_toBottomOf="@id/ToolbarAddAlarm_laplai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/custom_liner"
        android:padding="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_Nhan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/cannel_24"
            android:hint="Nhập nhãn vào đây"
            android:text="Báo thức"
            android:textColor="@color/white"
            android:textColorHint="@color/white"></EditText>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>