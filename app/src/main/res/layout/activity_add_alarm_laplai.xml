<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    tools:context=".AddAlarm_Laplai_Activity">
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/ToolbarAddAlarm_laplai"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_back"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"/>


            <TextView
                android:id="@+id/tv_Huy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Quay lại"
                android:gravity="start|center"
                android:textColor="#FFA31C"
                android:textSize="25sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="start|center"
                android:text="Lặp lại"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/liner_Sheet"
        app:layout_constraintTop_toBottomOf="@id/ToolbarAddAlarm_laplai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/custom_liner"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_Moit2"
                android:layout_width="0dp"
                android:gravity="start|center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mọi thứ hai"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/Cb_t2"
                android:layout_width="35dp"


                android:layout_height="35dp"
                android:background="@drawable/custom_checkbox"
                android:buttonTint="#00FF5722"
                android:checked="true"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_Moit3"
                android:layout_width="0dp"
                android:gravity="start|center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mọi thứ ba"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/Cb_t3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_checkbox"
                android:buttonTint="#00FF5722"
                android:checked="true"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_Moit4"
                android:layout_width="0dp"
                android:gravity="start|center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mọi thứ tư"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/Cb_t4"
                android:layout_width="35dp"
                android:layout_height="35dp"
